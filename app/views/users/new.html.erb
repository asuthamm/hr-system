
<h1>New User</h1>
<div class='pageAll'>
<br>
  <div class=XformAll>
  <br>
    <%= form_for @user, controller: 'users', action: 'create' do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "create" %>
    <% end %>
  </div>
</div>